<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UseDocsActivity">


    <TextView
        android:id="@+id/textView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Our Doctor List"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColor="@color/purple_200"
        />

    <Button
        android:id="@+id/btnDentistDad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Dentist - Dad"
        android:background="#50000000"
        />

    <Button
        android:id="@+id/btnENTMom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ENT - MOM"
        android:background="#50000000"
        />

    <Button
        android:id="@+id/btnTherapistMonica"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Therapist - Monica"
        android:background="#50000000"
        />

    <Button
        android:id="@+id/btnPsychCherita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Psychiatrist - Cherita"
        android:background="#50000000"
        />

    <Button
        android:id="@+id/btnPedMon"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pediatrician - Monica"
        android:background="#50000000"
        />

</LinearLayout>